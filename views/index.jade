html(lang="en")
	head
		title surfstream.tv
		script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js")
		script(type="text/javascript", src="http://documentcloud.github.com/underscore/underscore-min.js")
		script(type="text/javascript", src="http://documentcloud.github.com/backbone/backbone.js")
		script(type="text/javascript", src="/socket.io/socket.io.js")
		script(type="text/javascript", src="/javascripts/VideoResult.js")
		script(type="text/javascript", src="/javascripts/feed.js")
		script(type="text/javascript", src="/models/models.js")
		script(type="text/javascript", src="/controllers/controllers.js")
		script(type="text/javascript", src="/views.js")
		link(rel='stylesheet', href='/stylesheets/style.css')
		
	body
	#heading
		h1 surfstream
	#actionbar
	#content
		#room
			#videoPlayer
			#state
			#fbData
				=data
			#djInfo 
				| DJs: 
				span#djCount 0
				br
				span#djStatus You are not a DJ
				button#beDJ(onClick="becomeDJ()") dj
				button#quitDJ(onClick="quitDJ()") step down
			#playlist
			#addVideo
				input#videoEntry(type="text")
				button(onClick="addVideo()") add
			
			#chat
				p
					ul#chat_list

				form(method="post", action="#",onsubmit="return false")#messageForm
					p
						label Name:
							input(type='text',name='user_name')
					p
						label Message:
							input(type='text',name='message')
							input(type='submit',value='send')
			#searchYouTube
				input#searchBox(type="text")
				button(onClick="searchYouTube()") searchhh
			#youTubeResults
				ul#videoList
			
			li.videoResultTemplate
				div#videoTitle
				img#videoThumbnail
				div#addToPlaylist Click To Add Video to Playlist
			
	#footer
		span#client_count 0
		|  connected clients
		span#time
	

