
//Chat Box
div.chatContainer
	background-color: black
	width: 300px
	height: 225px
	max-width: 300px
	max-height: 225px
	div.chatHeader
		width: 300px
		height: 30px
		background-color: gray
		img.chatIcon
			display: inline-block
			margin-top: 5px
			margin-left: 5px
		div.chatTitle
			font-family: Helvetica, Arial, "Lucida Grande", sans-serif
			font-weight: 500
			color: white
			height: 18px
			position: absolute
			top: 15px
			left: 50px
			width: 36px
	div.messages
		height: 165px
		overflow-y: scroll
		overflow-x: hidden
	form.inputBox
		background-image: url('http://i.imgur.com/SWiIL.png')
		height: 40px
		text-indent: 30px
		input
			margin-top: 12px
			width: 240px
			height: 14px
			border: 0
			outline: 0
			background: transparent


//Chat Cell
div.messageContainer
	padding-left: 4px
	padding-right: 4px
	padding-top: 2px
	padding-bottom: 2px
	min-height: 20px
	height: auto
	overflow-x: hidden
	overflow-y: visible;
	width: 270px
	border: 1px solid black
	font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
	font-size: 14px
	span
		padding-top: 2px
		padding-bottom: 2px
		font-weight: bold
		display: inline-block
	div
		padding-top: 2px
		padding-bottom: 2px
		display: inline

div.historyContainer
	font-family: "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
	font-size: 14px
	height: 350px
	width: 300px
	overflow-x: hidden
	overflow-y: hidden
	background-color: #FFA
	border: 1px solid black
	.roomInfo
		display: block
		height: 25px
		width: 300px
		vertical-align: middle
		margin-left: 3px
		.createdBy
			font-weight: bold
			span.historyUser
				font-weight: 300
	.roomDescription
		margin-left: 3px
		margin-right: 3px
		font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
		display: block
		height: 35px
		font-size: 12px
	.history
		height: 290px
		width: 300px
		background-color: white
		.historyTitle
			height: 18px
			margin-left: 3px
		.videoHistory
			height: 272px
			background-color: gray
			overflow-x: hidden
			overflow-y: scroll
			
			
.videoLog
	width: 285px
	height: 95px
	.thumbContainer
		float: left
		width: 75px
		height: 75px
	.videoInfo
		float: right
		width: 197px
		height: 75px
		.title
			width: 185px
			height: 17px
			font-weight: bold
			font-size: 15px
		.details
			height: 33px
			font-size: 12px
			width: 185px
			.time
				height: 14px
			.score
				height: 14px
					
			
		
